# Telegram Bot token from @BotFather
TELEGRAM_BOT_TOKEN=your_bot_token_here

# ComfyUI server address
COMFYUI_URL=http://127.0.0.1:8000

# Allowed Telegram user IDs (comma-separated)
ALLOWED_USERS=123456789

# Default generation settings
DEFAULT_WIDTH=1024
DEFAULT_HEIGHT=1024
DEFAULT_STEPS=35
DEFAULT_CFG=6.0
DEFAULT_SAMPLER=euler_ancestral
DEFAULT_SCHEDULER=normal
DEFAULT_DENOISE=1.0

# Path to ComfyUI models directory
COMFYUI_MODELS_PATH=C:\path\to\your\models\in\ComfyUI

# CivitAI API key (optional, needed for some models)
# Get it at: https://civitai.com/user/account (API Keys section)
CIVITAI_API_KEY=

# HuggingFace token (optional, needed for gated models like SD 3.5, Flux)
# Get it at: https://huggingface.co/settings/tokens
HUGGINGFACE_TOKEN=

# ---------------------------------------------------------------------------
# Smart Prompt via local TIPO (optional)
# ---------------------------------------------------------------------------
# Provider: tipo | disabled
SMART_PROMPT_PROVIDER=tipo

# HuggingFace model id for TIPO
SMART_PROMPT_MODEL=KBlueLeaf/TIPO-500M-ft

# Request timeout in seconds
SMART_PROMPT_TIMEOUT=120

# TIPO sampling settings
SMART_PROMPT_TEMPERATURE=0.35
SMART_PROMPT_TOP_P=0.95
SMART_PROMPT_MIN_P=0.05
SMART_PROMPT_TOP_K=80

# Device: auto | cpu | cuda
SMART_PROMPT_DEVICE=auto

# -1 means random seed
SMART_PROMPT_SEED=-1

# Output lengths: very_short | short | long | very_long
SMART_PROMPT_TAG_LENGTH=long
SMART_PROMPT_NL_LENGTH=short

# Tags to suppress in generated positive prompt
SMART_PROMPT_BAN_TAGS=text, watermark, signature

# Base negative prompt used by Smart Prompt
SMART_PROMPT_NEGATIVE_BASE=worst quality, low quality, bad quality, blurry, jpeg artifacts, bad anatomy, deformed, ugly, extra limbs, missing limbs, disfigured, mutilated, out of frame, duplicate, watermark, signature, text
